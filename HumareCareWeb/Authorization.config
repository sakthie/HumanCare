<?xml version="1.0"?>
<configuration>
  <system.web>
    <authentication mode="Forms">
      <forms name="MYWEBAPP.ASPXAUTH"
          loginUrl="login.aspx"
          protection="All"
          path="/"/>
    </authentication>
    <authorization>
      <allow users="*"/>
    </authorization>
  </system.web>
  <location path="/Admin">
    <system.web>
      <authorization>
        <!-- Order and case are important below -->
        <allow roles="Admin"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  
  <location path="/Doctor">
    <system.web>
      <authorization >
        <!-- Order and case are important below -->
        <allow roles="Doctor"/>
        <deny users="*"/>       
      </authorization>
    </system.web>
  </location>

  <location path="/Manager">
    <system.web>
      <authorization >
        <!-- Order and case are important below -->
        <allow roles="Manager"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="/Patient">
    <system.web>
      <authorization >
        <!-- Order and case are important below -->
        <allow roles="Patient"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="/Clerk">
    <system.web>
      <authorization >
        <!-- Order and case are important below -->
        <allow roles="Clerk"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
  
</configuration>